<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cmput301w16t08.scaling_pancake.activities.ViewInstrumentActivity"
    tools:showIn="@layout/activity_view_instrument">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Instrument Name"
        android:id="@+id/instrument_name_et"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instrument Description"
        android:id="@+id/instrument_description_et"
        android:layout_below="@+id/instrument_name_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instrument_image_view"
        android:contentDescription="@string/instrument_content_desc"
        android:layout_below="@+id/instrument_description_et"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_sample"
        android:id="@+id/instrument_sound_button"
        android:layout_below="@+id/instrument_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instrument Owner"
        android:id="@+id/instrument_owner_et"
        android:layout_below="@+id/instrument_sound_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instrument Status"
        android:id="@+id/instrument_status_et"
        android:layout_below="@+id/instrument_owner_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instrument Burrowed By"
        android:id="@+id/instrument_borrowed_by_et"
        android:layout_below="@+id/instrument_status_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instrument Price"
        android:id="@+id/instrument_price_et"
        android:layout_below="@+id/instrument_borrowed_by_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_bid"
        android:id="@+id/instrument_make_bid_button"
        android:layout_below="@+id/instrument_price_et"
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/btn_selector"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_bids"
        android:id="@+id/instrument_view_bids_button"
        android:textColor="#000000"
        android:background="@drawable/btn_selector"
        android:layout_alignTop="@+id/instrument_make_bid_button"
        android:layout_alignRight="@+id/instrument_image_view"
        android:layout_alignEnd="@+id/instrument_image_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:id="@+id/instrument_edit_button"
        android:layout_below="@+id/instrument_make_bid_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/btn_selector"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/instrument_delete_button"
        android:textColor="#000000"
        android:background="@drawable/btn_selector"
        android:layout_alignTop="@+id/instrument_edit_button"
        android:layout_toRightOf="@+id/instrument_edit_button"
        android:layout_toEndOf="@+id/instrument_edit_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/instrument_back_button"
        android:layout_below="@+id/instrument_edit_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/btn_selector"/>
</RelativeLayout>
